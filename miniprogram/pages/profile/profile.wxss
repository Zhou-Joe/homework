/* pages/profile/profile.wxss */
.container {
  padding: 60rpx 40rpx;
  background: var(--bg-primary);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: var(--border-primary);
  border: 6rpx solid var(--bg-secondary);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.username {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.user-grade {
  font-size: 28rpx;
  color: var(--text-secondary);
  background: var(--bg-tertiary);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
}

/* 操作区域 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  height: 100rpx;
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-primary);
  border-radius: 20rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.98);
  background: var(--bg-tertiary);
}

.action-btn.logout {
  background: rgba(239, 68, 68, 0.1);
  border-color: var(--danger);
  color: var(--danger);
}

.action-btn.logout:active {
  background: rgba(239, 68, 68, 0.2);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-weight: 500;
}

/* 平台介绍 */
.about-section {
  background: var(--bg-secondary);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-light);
  margin-bottom: 40rpx;
}

.about-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.about-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.about-content {
  margin-bottom: 24rpx;
}

.about-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  text-align: center;
  margin-bottom: 20rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.feature-item {
  font-size: 24rpx;
  color: var(--brand-primary);
  line-height: 1.5;
}

.about-footer {
  text-align: center;
  padding-top: 20rpx;
  border-top: 2rpx solid var(--border-secondary);
}

.version-text {
  font-size: 22rpx;
  color: var(--text-muted);
  margin-bottom: 8rpx;
}

.copyright-text {
  font-size: 20rpx;
  color: var(--text-muted);
  opacity: 0.7;
}
