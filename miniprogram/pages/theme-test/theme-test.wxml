<!-- 测试主题切换页面 -->
<view class="container">
  <view class="header">
    <text class="title">主题测试</text>
    <text class="subtitle">测试暗黑模式适配效果</text>
  </view>

  <!-- 基础颜色测试 -->
  <view class="card">
    <text class="title">基础颜色</text>
    <view class="color-test">
      <text class="text-primary">主要文字颜色</text>
      <text class="text-secondary">次要文字颜色</text>
      <text class="text-muted"> muted文字颜色</text>
    </view>
  </view>

  <!-- 按钮测试 -->
  <view class="card">
    <text class="title">按钮样式</text>
    <view class="button-test">
      <button class="btn btn-primary">主要按钮</button>
      <button class="btn btn-success">成功按钮</button>
      <button class="btn btn-warning">警告按钮</button>
      <button class="btn btn-danger">危险按钮</button>
    </view>
  </view>

  <!-- 卡片测试 -->
  <view class="card">
    <text class="title">卡片样式</text>
    <view class="card-test">
      <view class="mini-card">
        <text class="card-title">子卡片1</text>
        <text class="card-desc">这是子卡片的描述文字</text>
      </view>
      <view class="mini-card">
        <text class="card-title">子卡片2</text>
        <text class="card-desc">这是子卡片的描述文字</text>
      </view>
    </view>
  </view>

  <!-- 输入框测试 -->
  <view class="card">
    <text class="title">输入框样式</text>
    <input class="input" placeholder="请输入文字测试" />
  </view>

  <!-- 标签测试 -->
  <view class="card">
    <text class="title">标签样式</text>
    <view class="tag-test">
      <text class="tag tag-primary">主要</text>
      <text class="tag tag-success">成功</text>
      <text class="tag tag-warning">警告</text>
      <text class="tag tag-danger">危险</text>
    </view>
  </view>

  <!-- 进度条测试 -->
  <view class="card">
    <text class="title">进度条样式</text>
    <view class="progress">
      <view class="progress-bar" style="width: 60%"></view>
    </view>
  </view>

  <!-- 头像测试 -->
  <view class="card">
    <text class="title">头像样式</text>
    <view class="avatar-test">
      <view class="avatar">A</view>
      <view class="avatar icon-primary">B</view>
    </view>
  </view>

  <!-- 浮动按钮测试 -->
  <view class="fab">+</view>
</view>